{
	"name": "haxe-debug",
	"displayName": "Haxe Debug",
	"version": "0.0.1",
	"publisher": "nulld",
	"description": "Debugger for haxe",
	"author": {
		"name": "nulld"
	},
	"engines": {
		 "vscode": "^1.4.0"
	},
	"icon": "images/icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/nulld/vscode_fdb_adapter.git"
	},
	"bugs": {
		"url": "https://github.com/nulld/vscode_fdb_adapter/issues"
	},
	"dependencies": {
		"vscode-debugprotocol": "1.8.0-pre.3",
		"vscode-debugadapter": "1.8.0-pre.4"
	},
	"devDependencies": {
		"typescript": "^1.8.5",
		"mocha": "^2.4.5"
	},
	"scripts": {
		
	},
	"contributes": {
		"debuggers": [
			{
				"type": "fdb",
				"label": "Fdb Debug",

				"enableBreakpointsFor": { "languageIds": [ "haxe"] },

				"program": "./bin/adapter.js",
				"runtime": "node",

				"configurationAttributes": {
					"launch": {
						"required": [ "program" ],
						"properties": {
							"program": {
								"type": "string",
								"description": "full path to a swf file.",
								"default": "${workspaceRoot}/bin/your.swf"
							}
							, "compilePath" :{
								"type": "string",
								"description": "full path where compile must be executed",
								"default": "${workspaceRoot}"
							}
							, "compileCommand" :{
								"type": "string",
								"description": "compile command",
								"default": "haxe build.hxml"
							}
							, "request" : {
								"type": "string"
								, "description": "launch | compileAndLaunch"
								, "default" : "launch"
							}
						}
					}
				},

				"initialConfigurations": [
					{
					    "name": "FDB-Debug",
						"type": "fdb",
						"request": "launch",
						"program": "${workspaceRoot}/bin/your.swf"
					}
				]
			}
		]
	}
}