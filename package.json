{
	"name": "haxe-debug",
	"displayName": "Haxe Debug",
	"version": "0.0.1",
	"publisher": "nulld",
	"description": "Debugger for haxe",
	"author": {
		"name": "nulld"
	},
	"engines": {
		"vscode": "^0.10.2"
	},
	"icon": "images/mock-debug-icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-mock-debug.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-mock-debug/issues"
	},
	"dependencies": {
		"vscode-debugprotocol": "1.8.0-pre.3",
		"vscode-debugadapter": "1.8.0-pre.4"
	},
	"devDependencies": {
		"typescript": "^1.8.5",
		"mocha": "^2.4.5",
		"vscode-debugadapter-testsupport": "1.8.0-pre.3"
	},
	"scripts": {
		
	},
	"contributes": {
		"debuggers": [
			{
				"type": "fdb",
				"label": "FDB Debug",

				"enableBreakpointsFor": { "languageIds": [ "haxe", "as3" ] },

				"program": "./bin/adapter.js",
				"runtime": "node",

				"configurationAttributes": {
					"launch": {
						"required": [ "program" ],
						"properties": {
							"program": {
								"type": "string",
								"description": "Workspace relative path to a swf file.",
								"default": "readme.md"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					}
				},

				"initialConfigurations": [
					{
					    "name": "FDB-Debug",
						"type": "fdb",
						"request": "launch",
						"program": "your.swf",
						"stopOnEntry": true
					}
				]
			}
		]
	}
}